@using TWIL1.ViewModel
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

@{
    ViewData["Title"] = "Home Page";
}    

@model SentimentAnalysisViewModel

<!-- about section -->

<section class="about_section layout_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6 px-0">
                <div class="img_container">
                    <div class="img-box">
                        <img src="~/images/about-img.jpg" alt="" />
                    </div>
                </div>
            </div>
            <div class="col-md-6 px-0">
                <div class="detail-box">
                    <div class="heading_container ">
                        <h2>
                           Sentiment Analysis
                        </h2>
                    </div>
                    <div class="row">
                        <div class="col-md-12 contact_form-container">

                            <form asp-action="GetSentiment" method="post">
                                <div>
                                    <p>Enter text for sentiment analysis:</p>
                                </div>
                                <div>
                                    <input class="message_input" id="inputText" type="text" placeholder="Enter Your Text" name="tweet" />
                                </div>
                                <div class="btn-box" style="margin:20px 0 0 0">                                   
                                    <button type="submit">Analyze Sentiment</button>
                                </div>
                            </form>

                        </div>
                    </div>
                    <div class="row" style="margin:20px 0 0 0">
                        <div class="col-md-12">
                            @if (Model != null) // Check if view model has data
                            {
                                <p>You entered: @Model.TheTweet</p>
                                <p>The Analysis: @Model.Text</p>@* 
                                <p>Sentiment Score: @Model.SentimentScore</p>
                                <p>Sentiment Magnitude: @Model.SentimentMagnitude</p> *@
                            }
                            else
                            {
                                 
                            }
                        </div>
                    </div>
               
                </div>
            </div>
        </div>
    </div>
</section>

<!-- end about section -->
<!-- service section -->
